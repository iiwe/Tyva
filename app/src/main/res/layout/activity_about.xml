<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".About">

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="336dp"
        android:layout_height="107dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="36dp"
        android:text="субъект Российской Федерации, входит в состав
        Сибирского федерального округа, расположена в Саянских горах, в верхнем течении реки Енисей.
         В Туве берёт начало одна из крупнейших рек земного шара — Енисей (Улуг-Хем).
        "
        android:textColor="#8F3535"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="119dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_tyva_new" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="238dp"
        android:layout_height="128dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/_4064166471515" />

</androidx.constraintlayout.widget.ConstraintLayout>